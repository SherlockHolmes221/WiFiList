<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <com.example.skywo.wifilistdemo.fg.UILib.WifiFrameLayout
        android:id="@+id/fl_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp" />



    <TextView
        android:maxWidth="250dp"
        android:maxLines="1"
        android:text="Lab_OffLine_TPLinkTL-WR885N1"
        android:layout_centerVertical="true"
        android:id="@+id/tv_item_wifi_name"
        android:layout_marginLeft="12dp"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--<TextView-->
    <!--android:id="@+id/tv_item_wifi_status"-->
    <!--android:textSize="14sp"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->

    <LinearLayout
        android:padding="20dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:gravity="center"
            android:id="@+id/tv_item_wifi_disconnect"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:background="@drawable/shape_blue_round_bg"
            android:layout_gravity="center"
            android:text="@string/wifi_list_item_connect"
            android:textColor="@drawable/selector_connect_view_text_color"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/iv_item_more"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/more"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>



</LinearLayout>